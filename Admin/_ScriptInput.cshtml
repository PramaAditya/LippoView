function setupHomeView() {
    function setupTextableView() {
        var jthis = $("input[name='textable']");
        if(jthis.length === 0) return;
        var currLi = jthis.parent().parent();
        if(!jthis[0].checked) {
            currLi.next().addClass('hide');
            currLi.next().next().addClass('hide');
        } else {
            currLi.next().removeClass('hide');
            currLi.next().next().removeClass('hide');
            //var list = currLi.parent().find(".text_input").cleditor();
            //enableEditor(list);
        }
    }

    $("input[name='textable']").change(function() {
        setupTextableView(); 
    });
    setupTextableView();

    function setupButtonableView() {
        var jthis = $("input[name='buttonable']");
        if(jthis.length === 0) return;        
        var nextLi = jthis.parent().parent().next(); 
        if(!jthis[0].checked) {
            nextLi.addClass('hide');
            nextLi.next().addClass('hide');
            nextLi.next().next().addClass('hide');
        } else {
            nextLi.removeClass('hide');
            nextLi.next().removeClass('hide');
            nextLi.next().next().removeClass('hide');
        }
    }
    $("input[name='buttonable']").change(function() {
        setupButtonableView();    
    });
    setupButtonableView();
}
            
setupHomeView();
